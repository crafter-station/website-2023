---
import type { HTMLAttributes } from "astro/types"

interface Props extends HTMLAttributes<"textarea"> {
  class?: string
}

const { class: className, ...props } = Astro.props
---

<textarea
  class:list={[
    className,
    "focus-within:border-[#f6ba2e]/70 focus-within:outline-none py-4 w-full rounded-md bg-white/0 border border-white px-3 text-md placeholder-white"
  ]}
  rows="6"
  {...props}></textarea>
