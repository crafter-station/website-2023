---
type Props = {
  class?: string
  disabled?: boolean
}

const { class: className, disabled } = Astro.props

const disabledClass = {
  "bg-[#1c1c1c] text-white text-md border-2 font-medium rounded-[6px]":
    !disabled,
  "border border-[#767676] hover:border-[#F8BB2D] text-white rounded-md text-sm shadow-inner drop-shadow-2xl":
    disabled
}
---

<button
  class:list={[className, disabledClass]}
  type="button"
  disabled={disabled}
>
  <slot />
</button>

<style>
  button {
    border-color: white;
    box-shadow:
      0px 0px 0px rgba(0, 0, 0, 0),
      0px 0px 0px rgba(0, 0, 0, 0),
      0px 0px 0px rgba(0, 0, 0, 0),
      inset 0px 3px 27.88px rgba(255, 255, 255, 0.5);
    transition:
      box-shadow 0.3s ease-in-out,
      border-color 0.3s ease-in-out;
  }
  button:hover {
    border-color: #f6ba2e;
    box-shadow:
      0px 4px 4px rgba(0, 0, 0, 0.25),
      0px 0px 30px rgba(247, 186, 45, 0.5),
      0px 0px 20.76px rgba(247, 187, 46, 0.5),
      inset 0px 3px 27.88px rgba(255, 255, 255, 0.5);
  }
</style>
