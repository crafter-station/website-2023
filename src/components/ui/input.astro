---
import type { HTMLAttributes } from "astro/types"

interface Props extends HTMLAttributes<"input"> {
  class?: string
}

const { class: className, disabled, ...props } = Astro.props

const disabledClass = {
  "cursor-not-allowed border border-neutral-500 placeholder:text-neutral-500 bg-neutral-800":
    disabled,
  "focus-within:border-[#f6ba2e]/70 focus-within:outline-none bg-white/0 border border-white placeholder-white":
    !disabled
}
---

<input
  class:list={[
    "py-1 h-10 w-auto rounded-md px-3 text-md",
    className,
    disabledClass
  ]}
  disabled={disabled}
  {...props}
/>
