---
import { fade } from "astro:transitions"
import Divider from "../ui/divider.astro"

interface Props {
  name: string
  class?: string
}

const { name, class: className } = Astro.props
---

<h1
  class:list={[
    "uppercase font-bold flex flex-col items-center leading-none w-[fit-content] mb-5",
    className
  ]}
>
  <div class="flex items-center w-full">
    <Divider />
    <span
      class="px-3 text-4xl text-transparent bg-clip-text text-stroke-1
    tracking-widest"
    >
      Crafter
    </span>
    <Divider />
  </div>
  <p class="text-white text-7xl" transition:animate="initial">
    {name}
  </p>
</h1>
