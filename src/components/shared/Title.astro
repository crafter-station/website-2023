---
import Divider from "../ui/Divider.astro";

interface Props {
  name: string;
  class?: string;
}

const { name, class: className } = Astro.props;
---

<h1
  class:list={[
    "uppercase font-bold flex flex-col items-center leading-none w-[280px]",
    className,
  ]}
>
  <div class="flex items-center w-full">
    <Divider />
    <span
      class="px-3 text-[35px] text-transparent bg-clip-text text-stroke-1
    tracking-widest"
    >
      Crafter
    </span>
    <Divider />
  </div>
  <p class="text-[60px] text-white">{name}</p>
</h1>
