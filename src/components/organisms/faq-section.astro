---
import { getI18N } from "@/i18n/utils"
import { cn } from "@/lib/utils"

import CirclesIcon from "../atoms/icons/circles-icon.astro"
import FaqAccordion from "../molecules/faq-accordion.astro"
import Tabs from "../molecules/tabs/tabs.astro"

const { currentLocale } = Astro
const i18n = getI18N(currentLocale)
---

<section
  id="faq"
  class="animate-fade-up flex flex-col items-center gap-8 lg:gap-16 px-4 pt-4"
>
  <section class="flex flex-col gap-8 w-full">
    <p
      class="flex items-center w-fit gap-2 uppercase bg-stone-900 rounded-md px-4 py-1 text-sm font-semibold border border-stone-700 text-white/60 mx-auto"
    >
      <CirclesIcon />
      <span class="pt-0.5">
        {i18n.FAQ.BADGE}
      </span>
    </p>
    <h1
      class="font-semibold text-3xl md:text-4xl leading-tight lg:text-6xl text-center lg:text-left"
    >
      {i18n.FAQ.TITLE}
    </h1>
  </section>
  <section class="flex flex-col gap-8 justify-center lg:flex-row w-full">
    <Tabs class="flex flex-col gap-8 lg:flex-row w-full">
      <Fragment slot="tab-1">
        {i18n.FAQ.TABS.FIRST.TITLE}
      </Fragment>
      <Fragment slot="tab-2">{i18n.FAQ.TABS.SECOND.TITLE}</Fragment>
      <Fragment slot="tab-3">{i18n.FAQ.TABS.THIRD.TITLE}</Fragment>

      <Fragment slot="panel-1">
        <FaqAccordion
          class="border border-stone-600"
          data={[
            {
              title: `${i18n.FAQ.TABS.FIRST.QUESTIONS.FIRST}`,
              description: `${i18n.FAQ.TABS.FIRST.ANSWERS.FIRST}`,
            },
            {
              title: `${i18n.FAQ.TABS.FIRST.QUESTIONS.SECOND}`,
              description: `${i18n.FAQ.TABS.FIRST.ANSWERS.SECOND}`,
            },
            {
              title: `${i18n.FAQ.TABS.FIRST.QUESTIONS.THIRD}`,
              description: `${i18n.FAQ.TABS.FIRST.ANSWERS.THIRD}`,
            },
          ]}
        />
      </Fragment>

      <Fragment slot="panel-2">
        <FaqAccordion
          class="border border-stone-600"
          data={[
            {
              title: `${i18n.FAQ.TABS.SECOND.QUESTIONS.FIRST}`,
              description: `${i18n.FAQ.TABS.SECOND.ANSWERS.FIRST}`,
            },
            {
              title: `${i18n.FAQ.TABS.SECOND.QUESTIONS.SECOND}`,
              description: `${i18n.FAQ.TABS.SECOND.ANSWERS.SECOND}`,
            },
            {
              title: `${i18n.FAQ.TABS.SECOND.QUESTIONS.THIRD}`,
              description: `${i18n.FAQ.TABS.SECOND.ANSWERS.THIRD}`,
            },
          ]}
        />
      </Fragment>

      <Fragment slot="panel-3">
        <FaqAccordion
          class="border border-stone-600"
          data={[
            {
              title: `${i18n.FAQ.TABS.THIRD.QUESTIONS.FIRST}`,
              description: `${i18n.FAQ.TABS.THIRD.ANSWERS.FIRST}`,
            },
            {
              title: `${i18n.FAQ.TABS.THIRD.QUESTIONS.SECOND}`,
              description: `${i18n.FAQ.TABS.THIRD.ANSWERS.SECOND}`,
            },
            {
              title: `${i18n.FAQ.TABS.THIRD.QUESTIONS.THIRD}`,
              description: `${i18n.FAQ.TABS.THIRD.ANSWERS.THIRD}`,
            },
          ]}
        />
      </Fragment>
    </Tabs>

    <div class="flex flex-col gap-6">
      <div class="flex items-center justify-center text-7xl">ðŸ¤”</div>
      <p class="break-words text-center">{i18n.FAQ.SCHEDULE}</p>
      <button
        class={cn(
          "relative inline-flex justify-center font-semibold gap-1 z-0",
          "outline-2 outline-offset-2 outline-neutral-900 dark:outline-neutral-50",
          "focus-visible:outline-2 focus-visible:outline",
          "[text-shadow:_0_1px_2px_rgb(0_0_0_/_15%)]",
          "transition-colors duration-200 ease-in-out",
          "bg-white text-black hover:bg-stone-300 after:from-stone-300",
          "after:[content:''] after:absolute after:rounded-[inherit] after:inset-0 after:z-[-1] after:border after:border-transparent",
          "after:bg-clip-content after:bg-inherit after:shadow-[inset_0_2px_3px_-1px_hsla(0,_0%,_100%,_0.5)]",
          "after:bg-gradient-to-b",
          "border border-stone-600 rounded-xl py-3 px-6 w-3/4 mx-auto",
        )}
      >
        {i18n.FAQ.CALL_TO_ACTION}
      </button>
    </div>
  </section>
</section>
