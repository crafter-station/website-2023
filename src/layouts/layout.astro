---
import "@fontsource-variable/saira"
import Footer from "../components/footer.astro"
import GlowLogo from "../components/ui/svg/icons/glow-logo.astro"

type Props = {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <div class="flex space-between h-auto">
      <aside
        class="h-screen w-[300px] sticky top-0 left-0 flex-grow pt-10 pl-20 flex flex-col justify-between"
      >
        <div class="flex-grow">
          <a href="/">
            <GlowLogo class="p-3" size={68} />
          </a>
        </div>
        <ul class="flex flex-col gap-4 flex-grow justify-center">
          <li class="text-lg text-white font-medium uppercase">
            <a href="/services">Services</a>
          </li>
          <li class="text-lg text-white font-medium uppercase">
            <a href="/clients">Clients</a>
          </li>
          <li class="text-lg text-white font-medium uppercase">
            <a href="/products">Products</a>
          </li>
          <li class="text-lg text-white font-medium uppercase">
            <a href="/open-source">Open Source</a>
          </li>
          <li class="text-lg text-white font-medium uppercase">
            <a href="/blog">Blog</a>
          </li>
        </ul>
        <div class="flex-grow"></div>
      </aside>
      <div class="flex flex-col gap-16">
        <slot />
        <Footer />
      </div>
      <aside
        class="h-screen pt-10 w-[300px] sticky top-0 right-0 flex-grow flex flex-col items-center justify-between"
      >
        <div class="flex-grow">
          <a
            class="text-white text-xl inline-flex justify-center font-medium bg-zinc-700 px-3 py-2 mx-10 rounded-md w-[180px] hover:bg-zinc-600 transition-colors"
            href="/contact"
          >
            Build with us
          </a>
        </div>
        <ul class="flex flex-col flex-grow gap-6 justify-center">
          <li>
            <a href="https://twitter.com/raillyhugo" target="_blank">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="stroke-white"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M4 4l11.733 16h4.267l-11.733 -16z"></path>
                <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path>
              </svg>
            </a>
          </li>
          <li>
            <a href="https://github.com/crafter-station" target="_blank">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="stroke-white"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path
                  d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
                ></path>
              </svg>
            </a>
          </li>
          <li>
            <a href="https://linkedin.com/in/railly-hugo" target="_blank">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="stroke-white"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path
                  d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
                ></path>
                <path d="M8 11l0 5"></path>
                <path d="M8 8l0 .01"></path>
                <path d="M12 16l0 -5"></path>
                <path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
              </svg>
            </a>
          </li>
          <li>
            <a href="https://instagram.com/" target="_blank">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="stroke-white"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path
                  d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
                ></path>
                <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
                <path d="M16.5 7.5l0 .01"></path>
              </svg>
            </a>
          </li>
        </ul>
        <div class="flex-grow"></div>
      </aside>
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: black;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  body {
    scrollbar-gutter: stable;
  }

  .text-stroke-1 {
    -webkit-text-stroke: 1px white;
  }
  .text-stroke-3 {
    -webkit-text-stroke: 3px white;
  }
</style>
